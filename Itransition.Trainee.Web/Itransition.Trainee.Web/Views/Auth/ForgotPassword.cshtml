<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="mb-4">
                <h1 class="app-title">THE APP</h1>
            </div>

            <div class="mt-5 mb-4">
                <h2 class="fw-semibold">Reset your password</h2>
                <p class="text-muted small">
                    Enter your email address and we'll send you instructions to reset your password.
                </p>
            </div>

            <form id="forgotPasswordForm" class="mt-4">
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" placeholder="your@email.com" required>
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                    <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                    Send Reset Instructions
                </button>
            </form>

            <div id="successMessage" class="alert alert-success p-4 mt-4 d-none">
                <h4 class="alert-heading">Check your email</h4>
                <p>We've sent password reset instructions to <span id="emailSent"></span>. Please check your inbox.</p>
            </div>

            <div class="text-center mt-4">
                <a href="/Auth/Login" class="text-decoration-none">Back to sign in</a>
            </div>
        </div>
    </div>
</div>