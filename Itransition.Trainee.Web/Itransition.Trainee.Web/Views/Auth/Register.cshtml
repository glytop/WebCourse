@model RegisterViewModel
@section Scripts {
    <script src="~/js/register.js"></script>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- App Title -->
            <div class="mb-4">
                <h1 class="app-title">THE APP</h1>
            </div>

            <!-- Sign Up Form -->
            <div class="mt-5 mb-4">
                <p class="text-muted small">Start your journey</p>
                <h2 class="fw-semibold">Create your account</h2>
            </div>

            <form id="signupForm" asp-action="Register" method="post" class="mt-4">
                <div class="mb-3">
                    <label for="name" class="form-label">Full name</label>
                    <div class="input-group">
                        <input type="text" asp-for="Name" class="form-control" id="name" placeholder="John Doe" required>
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <div class="input-group">
                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="john@example.com" required>
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="••••••••" required>
                        <span class="input-group-text password-toggle" role="button">
                            <i class="bi bi-eye"></i>
                        </span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="••••••••" required>
                        <span class="input-group-text confirm-password-toggle" role="button">
                            <i class="bi bi-eye"></i>
                        </span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                    <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                    Create Account
                </button>

                <div class="text-center mt-4">
                    <span class="text-muted">Already have an account?</span>
                    <a href="/Auth/Login" class="ms-1 text-decoration-none">Sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>